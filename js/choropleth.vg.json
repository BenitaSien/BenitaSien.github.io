{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 800,
  "data": [
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/BenitaSien/BenitaSien.github.io/main/data/percent_change_1990-2020.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_0_countries",
        "parse": {}
      },
      "transform": [
        {
          "type": "formula",
          "expr": "datum[\"properties\"] && datum[\"properties\"][\"NAME\"]",
          "as": "properties.NAME"
        }
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "lookup",
          "from": "source_1",
          "key": "Area",
          "fields": ["properties.NAME"],
          "values": ["Percent_Change"]
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Percent_Change\"]) && isFinite(+datum[\"Percent_Change\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, childHeight]"},
      "fit": {"signal": "[data('source_0'), data('data_0')]"},
      "type": "equalEarth"
    }
  ],
  "signals": [{"name": "childHeight", "value": 600}],
  "layout": {"padding": 20, "columns": 1, "bounds": "full", "align": "each"},
  "marks": [
    {
      "type": "group",
      "name": "concat_0_group",
      "title": {"text": "Forest Cover Loss (1996-2020)", "frame": "group"},
      "encode": {
        "update": {
          "width": {"signal": "width"},
          "height": {"signal": "childHeight"}
        }
      },
      "marks": [
        {
          "name": "concat_0_layer_0_marks",
          "type": "shape",
          "style": ["geoshape"],
          "from": {"data": "source_0"},
          "encode": {
            "update": {
              "fill": {"value": "lightgray"},
              "stroke": {"value": "white"},
              "ariaRoleDescription": {"value": "geoshape"}
            }
          },
          "transform": [{"type": "geoshape", "projection": "projection"}]
        },
        {
          "name": "concat_0_layer_1_marks",
          "type": "shape",
          "style": ["geoshape"],
          "from": {"data": "data_0"},
          "encode": {
            "update": {
              "fill": {"scale": "color", "field": "Percent_Change"},
              "tooltip": {
                "signal": "{\"Country\": isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"], \"% Forest Cover Change\": format(datum[\"Percent_Change\"], \"\")}"
              },
              "ariaRoleDescription": {"value": "geoshape"},
              "description": {
                "signal": "\"Percent_Change: \" + (format(datum[\"Percent_Change\"], \"\")) + \"; Country: \" + (isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"]) + \"; % Forest Cover Change: \" + (format(datum[\"Percent_Change\"], \"\"))"
              }
            }
          },
          "transform": [{"type": "geoshape", "projection": "projection"}]
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": [-50, 0, 50, 100],
      "range": ["#57402e", "#e8e2dc", "#80a148", "#5b8217"],
      "interpolate": "hcl",
      "zero": true
    }
  ],
  "legends": [
    {
      "title": "Percent Change",
      "fill": "color",
      "gradientLength": {"signal": "clamp(childHeight, 64, 200)"}
    }
  ],
  "config": {}
}
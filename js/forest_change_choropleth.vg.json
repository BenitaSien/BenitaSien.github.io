    {
      "name": "data_15",
      "source": "data_0",
      "transform": [{"type": "filter", "expr": "datum.Area == 'Cambodia'"}]
    },
    {
      "name": "data_16",
      "source": "data_15",
      "transform": [
        {
          "type": "formula",
          "expr": "'Illegal logging is a large cause'",
          "as": "text_annotation"
        }
      ]
    },
    {
      "name": "data_17",
      "source": "data_15",
      "transform": [
        {
          "type": "formula",
          "expr": "'of forest loss in Myanmar and Cambodia'",
          "as": "text_annotation"
        }
      ]
    }

      "transform": [
        {
          "type": "formula",
          "expr": "'Forests in Indonesia have declined'",
          "as": "text_annotation"
        }
      ]
    },
    {
      "name": "data_14",
      "source": "data_12",
      "transform": [
        {
          "type": "formula",
          "expr": "'due to wood pulp and palm oil industries'",
          "as": "text_annotation"

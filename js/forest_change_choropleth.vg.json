{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 800,
  "data": [
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/BenitaSien/BenitaSien.github.io/main/data/forest_cover_percent_change.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_0_countries",
        "parse": {}
      },
      "transform": [
        {
          "type": "formula",
          "expr": "datum[\"properties\"] && datum[\"properties\"][\"NAME\"]",
          "as": "properties.NAME"
        }
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "lookup",
          "from": "source_1",
          "key": "Area",
          "fields": ["properties.NAME"],
          "values": [
            "Percent_Change",
            "Area",
            "Year_x",
            "Year_y",
            "land_cover_percent_x",
            "land_cover_percent_y"
          ]
        },
        {
          "type": "formula",
          "expr": "datum['Year_x'] + ' - ' + datum['Year_y']",
          "as": "timespan"
        }
      ]
    },
    {
      "name": "data_1",
      "source": "data_0",
      "transform": [
        {
          "type": "filter",
          "expr": "isValid(datum[\"Percent_Change\"]) && isFinite(+datum[\"Percent_Change\"])"
        }
      ]
    },
    {
      "name": "data_2",
      "source": "data_0",
      "transform": [{"type": "filter", "expr": "datum.Area == 'Iceland'"}]
    },
    {
      "name": "data_3",
      "source": "data_2",
      "transform": [
        {
          "type": "formula",
          "expr": "'Forests are steadily growing in Europe'",
          "as": "text_annotation"
        }
      ]
    },
    {
      "name": "data_4",
      "source": "data_0",
      "transform": [{"type": "filter", "expr": "datum.Area == 'Uruguay'"}]
    },
    {
      "name": "data_6",
      "source": "data_4",
      "transform": [
        {
          "type": "formula",
          "expr": "'Paraguay and Nicaragua have some of the highest'",
          "as": "text_annotation"
        }
      ]
    },
    {
      "name": "data_7",
      "source": "data_4",
      "transform": [
        {
          "type": "formula",
          "expr": "'Cuba and Puerto Rico are carrying out'",
          "as": "text_annotation"
        }
      ]
    },
    {
      "name": "data_8",
      "source": "data_0",
      "transform": [{"type": "filter", "expr": "datum.Area == 'Benin'"}]
    },
    {
      "name": "data_9",
      "source": "data_0",
      "transform": [{"type": "filter", "expr": "datum.Area == 'China'"}]
    },
    {
      "name": "data_10",
      "source": "data_9",
      "transform": [
        {
          "type": "formula",
          "expr": "datum['Area']+' is a world leader in afforestation with'",
          "as": "text_annotation"
        }
      ]
    },
    {
      "name": "data_11",
      "source": "data_9",
      "transform": [
        {
          "type": "formula",
          "expr": "'over 500,000 kmÂ² of trees replanted since 1990'",
          "as": "text_annotation"
        }
      ]
    },
    {
      "name": "data_12",
      "source": "data_0",
      "transform": [{"type": "filter", "expr": "datum.Area == 'Indonesia'"}]
    },
    {
      "name": "data_13",
